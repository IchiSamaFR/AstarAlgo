<Window x:Class="AstarAlgo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AstarAlgo"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="640">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid x:Name="menuView">
            <CheckBox x:Name="showValues" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10 3 0 0">Show values</CheckBox>
            <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Padding="5,2,5,2"
                    Click="StartPath_Click">Find path</Button>
        </Grid>
        <Grid x:Name="gridView" Grid.Row="1">

        </Grid>
    </Grid>
</Window>
